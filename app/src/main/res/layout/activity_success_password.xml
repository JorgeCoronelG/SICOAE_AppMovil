<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.SuccessPasswordActivity"
        android:background="@android:color/white">

    <ImageView
            android:id="@+id/img_like"
            android:layout_width="@dimen/size_img_title"
            android:layout_height="@dimen/size_img_title"
            android:src="@drawable/ic_like"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/top_img_success"
            android:layout_marginBottom="@dimen/margin_form"
        />

    <TextView
            android:id="@+id/txt_reset_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_like"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_form"
            android:layout_marginBottom="@dimen/margin_form"
            android:text="@string/reset_password"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size_txt_title_h1"
            android:textStyle="bold"
        />

    <Button
            android:id="@+id/btn_accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_reset_password"
            android:text="@string/accept"
            android:layout_margin="@dimen/margin_form"
            android:background="@drawable/rounded_button_states"
            android:textColor="@android:color/white"
            android:padding="@dimen/padding"
            />

</RelativeLayout>