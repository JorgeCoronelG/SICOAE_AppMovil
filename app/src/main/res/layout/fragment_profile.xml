<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ProfileFragment"
        android:background="@android:color/white"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="@dimen/margin_form"
            android:layout_marginLeft="@dimen/margin_items"
            android:layout_marginRight="@dimen/margin_items"
            >

        <ImageView
                android:layout_width="1dp"
                android:layout_height="@dimen/size_img_footer"
                android:layout_weight="1"
                android:src="@drawable/ic_user"
                />

        <TextView
                android:id="@+id/txt_tutor"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left|center_vertical"
                android:text="Tutor 1"
                android:textSize="@dimen/size_txt_title_h2"
                android:textColor="@android:color/black"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginLeft="@dimen/margin_items"
            android:layout_marginRight="@dimen/margin_items"
            >

        <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity=""
                android:text="@string/complete_name"
                android:textSize="@dimen/size_txt_footer"
                android:textColor="@color/text_hint"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="@dimen/margin_items"
            android:layout_marginLeft="@dimen/margin_items"
            android:layout_marginRight="@dimen/margin_items"
            >

        <ImageView
                android:layout_width="1dp"
                android:layout_height="@dimen/size_img_footer"
                android:layout_weight="1"
                android:src="@drawable/ic_phone"
                />

        <TextView
                android:id="@+id/txt_phone"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left|center_vertical"
                android:text="4422334455"
                android:textSize="@dimen/size_txt_title_h2"
                android:textColor="@android:color/black"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginLeft="@dimen/margin_items"
            android:layout_marginRight="@dimen/margin_items"
            >

        <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity=""
                android:text="@string/phone"
                android:textSize="@dimen/size_txt_footer"
                android:textColor="@color/text_hint"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="@dimen/margin_items"
            android:layout_marginLeft="@dimen/margin_items"
            android:layout_marginRight="@dimen/margin_items"
            >

        <ImageView
                android:layout_width="1dp"
                android:layout_height="@dimen/size_img_footer"
                android:layout_weight="1"
                android:src="@drawable/ic_email"
                />

        <TextView
                android:id="@+id/txt_email"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left|center_vertical"
                android:text="tutor@gmail.com"
                android:textSize="@dimen/size_txt_title_h2"
                android:textColor="@android:color/black"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginLeft="@dimen/margin_items"
            android:layout_marginRight="@dimen/margin_items"
            >

        <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity=""
                android:text="@string/email"
                android:textSize="@dimen/size_txt_footer"
                android:textColor="@color/text_hint"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"
            android:layout_marginTop="@dimen/margin_form"
            />

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_students"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>