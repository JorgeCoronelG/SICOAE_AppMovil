<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_cardview_student"
        android:id="@+id/cv_student"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_items"
            android:layout_marginLeft="@dimen/margin_items"
            android:layout_marginRight="@dimen/margin_items"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >

            <ImageView
                    android:layout_width="1dp"
                    android:layout_height="@dimen/size_img_footer"
                    android:layout_weight="1"
                    android:src="@drawable/ic_student"
                    />

            <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="left|center_vertical"
                    android:text="Alejandro Olivarez MartÃ­nez"
                    android:textSize="@dimen/size_txt_title_h2"
                    android:textColor="@android:color/black"
                    />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >

            <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

            <TextView
                    android:id="@+id/txt_scholarship"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity=""
                    android:text="@string/scholarship"
                    android:textSize="@dimen/size_txt_footer"
                    android:textColor="@color/text_hint"
                    />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>