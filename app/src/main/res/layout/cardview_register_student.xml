<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_cardview_register_student"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_register_student"
        cardview:cardElevation="0dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@drawable/border_cardview">

        <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_student"
                android:padding="@dimen/padding"
                />

        <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:weightSum="3"
                android:orientation="vertical"
                >

            <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:text="Alejandro Olivarez MartÃ­nez"
                    android:textSize="@dimen/size_txt_body"
                    android:textColor="@android:color/black"
                    android:gravity="center|left"
                    />

            <TextView
                    android:id="@+id/txt_input"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:text="Entrada: 07:25 am"
                    android:textSize="@dimen/size_txt_body"
                    android:textColor="@android:color/black"
                    android:gravity="center|left"
                    />

            <TextView
                    android:id="@+id/txt_output"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:text="Salida: 12:33 pm"
                    android:textSize="@dimen/size_txt_body"
                    android:textColor="@android:color/black"
                    android:gravity="center|left"
                    />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>